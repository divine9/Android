<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fixpocket.Fragment.OrderSummery">
    <include layout="@layout/toolbar_with_image_view"
        android:id="@+id/include"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/order_summery">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:background="#FFFFFF">


                <ImageView
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:id="@+id/beatImg"
                 android:src="@drawable/te1"
                 android:layout_marginRight="25dp"
                 android:layout_marginBottom="20dp"
                 android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                 android:scaleType="centerCrop"
                 android:layout_weight="4"
                    />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Professional Infographics with your..."
                        android:textSize="18sp"
                        android:textColor="#000"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Category: Graphic Design"
                        android:textSize="14sp"
                        android:textColor="#676767"
                        />
                 </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:layout_weight="7"
                android:background="#F3F3F3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ITEM"
                        android:textSize="18sp"
                        android:textColor="#59595B"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT"
                        android:textSize="18sp"
                        android:textColor="#59595B"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textStyle="bold"
                         />
                </LinearLayout>
                <ListView
                    android:id="@+id/order_summery_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="YOUR ORDER VALUE IS"
                        android:textSize="22sp"
                        android:textColor="#59595B"
                        android:layout_weight="8"
                        android:gravity="left"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="499"
                        android:textSize="22sp"
                        android:textColor="#59595B"
                        android:layout_weight="2"
                        android:gravity="end"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery expacted within the next two days"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_background"
                    android:text="PLACE ORDER"
                    android:textSize="20sp"
                    android:id="@+id/order_summery_place_order"
                    android:textAlignment="center"
                    android:textColor="@color/app_bar_text_color"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Payment information is secure"
                    android:textSize="14sp"
                    android:textColor="#59595B"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <include layout="@layout/order_status"/>


</RelativeLayout>
